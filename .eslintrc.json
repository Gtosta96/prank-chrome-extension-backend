{
  "extends": ["eslint:recommended", "google", "plugin:import/errors", "plugin:import/warnings"],
  "plugins": [ "import" ],
  "rules": {
    "import/no-unresolved": [2, { "commonjs": true, "amd": true}],
    "import/named": 2,
    "import/namespace": 2,
    "import/export": 2,
    "import/default": 2,

    "linebreak-style": ["error", "windows"],
    "object-curly-spacing": ["error", "always"],
    "require-jsdoc": "off",
    "new-cap": "off"
  },
  "env": {
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 2018
  }
}